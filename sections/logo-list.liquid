<div class="logo-list">
    <h2 class="heading center">{{section.settings.title}}</h2>
    <div class="logo-container">
        {% for block in section.blocks %}
           <a href="{{block.settings.link}}" class="logo-link">
            <img src="{{ block.settings.image | img_url : 'master'}}" alt="">
           </a>
        {% endfor %}
    </div>
</div>


{% schema %}
{
    "name" : "Logo list",
    "max_blocks" : 4,
    "settings" : [
    {
        "type" : "text",
        "id" : "title",
        "label" : "Heading",
        "default" : "Logo list"

    }
    ],
    "blocks" : [
    {
        "type" : "logo_image",
        "name" : "Logo",
        "settings" : [
        {
            "type" :"image_picker",
            "id" : "image",
            "label" : "Logo image"
        },
        {
            "type" : "url",
            "id" : "link",
            "label" : "Logo link",
            "info"  : "Optional"
        }
        ]
       
    }
    ],
    "presets" : [
    {
        "name" : "Logo list",
        "category" : "Image",
        "blocks" : [
        {
            "type" : "logo_image"
        },
        {
            "type" : "logo_image"
        },
        {
            "type" : "logo_image"
        },
        {
            "type" : "logo_image"
        }
        
        
        ]
        
    }]
}
{% endschema %}